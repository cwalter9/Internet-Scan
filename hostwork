#!/bin/bash --login

cd /admin/iscan
 
. functions

chkmkdir /tmp/xml

for i in `echo "select ipaddr from address where status=3 and updown=1 limit $runlimit" | $MYSQLR`; do
  if [ ! -f /tmp/xml/$i ]; then
    nmap --host-timeout 30 -oX /tmp/xml/$i $i
  fi
  for f in `cat /tmp/xml/$i | grep "port protocol" | gawk -F\" '{ print $4 }'`; do
    chtime=`date +%s`
    echo "insert into ports set ipaddr='$i',port='$f',chtime='$chtime'" | $MYSQLQ
  done
  echo "update address set status=4 where ipaddr='$i'" | $MYSQLQ
done

funstop $processname
